<resources>
    
    <!-- Base application theme. -->
    <style name = "AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <item name = "android:statusBarColor">@color/colorStatus</item>
        <item name = "android:homeAsUpIndicator">@drawable/ic_arrow_back_24dp</item>
    </style>
    
    <style name = "ConfigureMenuTextStyle">
        <item name = "android:background">@color/colorStatus</item>
        <item name = "android:textColor">@android:color/white</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_columnWeight">1</item>
        <item name = "android:padding">6dp</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">0dp</item>
    </style>
    
    <style name = "ConfigureContentTextStyle">
        <item name = "android:maxLines">1</item>
        <item name = "android:minLines">1</item>
        <item name = "android:background">@color/colorMenus</item>
        <item name = "android:textColor">@android:color/white</item>
        <item name = "android:textColorHint">@android:color/white</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_columnWeight">3</item>
        <item name = "android:padding">6dp</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">0dp</item>
    </style>
    
    <style name = "ToolbarStyle" >
        <item name = "android:background">@color/colorMenus</item>
        <item name = "android:layout_height">?attr/actionBarSize</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:elevation">4dp</item>
    </style>
    
    <style name = "ToolbarTitleTextStyle">
        <item name = "android:textSize">21sp</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@android:color/white</item>
    </style>
</resources>
